{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Run Android",
            "request": "launch",
            "type": "reactnative",
            "cwd": "${workspaceFolder}",
            "enableDebug": false,
            "platform": "android"
        },
        {
            "name": "Attach to packager",
            "request": "attach",
            "type": "reactnative",
            "cwd": "${workspaceFolder}"
        },
        {
            "name": "Debug Android",
            "cwd": "${workspaceFolder}",
            "type": "reactnative",
            "request": "launch",
            "platform": "android"
        },
        {
            "name": "Debug Windows",
            "cwd": "${workspaceFolder}",
            "type": "reactnative",
            "request": "launch",
            "platform": "windows"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Jest single run all tests",
            "program": "${workspaceFolder}/node_modules/jest/bin/jest",
            "args": ["--verbose", "-i", "--no-cache", "--detectOpenHandles"],
            "console": "integratedTerminal",
            "cwd": "${workspaceRoot}"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Jest watch all tests",
            "program": "${workspaceFolder}/node_modules/jest/bin/jest",
            "args": ["--verbose", "-i", "--no-cache", "--watchAll", "--detectOpenHandles"],
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen",
            "cwd": "${workspaceRoot}"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Jest single run current file",
            "program": "${workspaceFolder}/node_modules/jest/bin/jest",
            "args": ["${fileBasename}", "--verbose", "-i", "--no-cache", "--detectOpenHandles"],
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen",
            "cwd": "${workspaceRoot}"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Jest watch current file",
            "program": "${workspaceFolder}/node_modules/jest/bin/jest",
            "args": ["${fileBasename}", "--verbose", "-i", "--no-cache", "--watchAll", "--detectOpenHandles"],
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen",
            "cwd": "${workspaceRoot}"
        }
    ]
}
