{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Jest single run all tests",
      "program": "${workspaceFolder}/node_modules/jest/bin/jest",
      "args": ["--verbose", "-i", "--no-cache", "--detectOpenHandles"],
      "console": "integratedTerminal",
      "cwd": "${workspaceRoot}"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Jest single run current file",
      "program": "${workspaceFolder}/node_modules/jest/bin/jest",
      "args": ["${fileBasename}", "--verbose", "-i", "--no-cache", "--detectOpenHandles"],
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "cwd": "${workspaceRoot}"
    }
  ]
}
